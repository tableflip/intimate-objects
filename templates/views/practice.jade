extends ../layouts/home

block content
  - cards = [ "TOUCH", "SMELL", "GAZE", "SPACE", "HOLD", "REVEAL", "FEELING", "PRIVATE"]

  .container
    h2 practice
    p

    section
      h3.box(data-toggle="collapse", data-target=".cards") Where to start?
      .cards.collapse
        each card in cards
          .card
            .front.side
            .back.side=card
      .fullscreen
        a.close X
        .card
        p.note Click for a new card

    section
      h3.box(data-toggle="collapse", data-target=".inspiration") Some visual inspiration
      .inspiration.collapse
        img(src="http://33.media.tumblr.com/334e20a0491b7176c825f6cb5b3ad137/tumblr_mua03qrVxZ1suhdw4o1_500.gif")

    section
      h3.box(data-toggle="collapse", data-target=".tryme") Something to try
      .tryme.collapse


block js
  script(src='/js/practice.js')